<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <layer-list>
         <item
             android:left="0dp"
             android:right="0dp">
             <shape android:shape="rectangle"  >
                 <corners android:radius="250dip" />
                 <solid android:color="@color/primaryDarkColor"/>
             </shape>
         </item>
         <item
             android:bottom="20dp"
             android:left="20dp"
             android:right="20dp"
             android:top="20dp">
             <shape android:shape="rectangle"  >
                 <solid android:color="@android:color/background_light"/>
             </shape>
         </item>
     </layer-list>
 </item>
<item android:state_focused="true">
    <layer-list>
        <item
            android:left="0dp"
            android:right="0dp">
            <shape android:shape="rectangle"  >
                <corners android:radius="250dip" />
                <solid android:color="@color/primaryDarkColor"/>
            </shape>
        </item>
        <item
            android:bottom="20dp"
            android:left="20dp"
            android:right="20dp"
            android:top="20dp">
            <shape android:shape="rectangle"  >
                <solid android:color="@android:color/background_light"/>
            </shape>
        </item>
    </layer-list>
</item>  
<item >
    <layer-list>
        <item
            android:left="0dp"
            android:right="0dp">
            <shape android:shape="rectangle"  >
                <corners android:radius="250dip" />
                <solid android:color="@color/sec_color"/>
            </shape>
        </item>
        <item
            android:bottom="20dp"
            android:left="20dp"
            android:right="20dp"
            android:top="20dp">
            <shape android:shape="rectangle"  >
                <solid android:color="@android:color/background_light"/>
            </shape>
        </item>
    </layer-list>
 </item>
</selector>