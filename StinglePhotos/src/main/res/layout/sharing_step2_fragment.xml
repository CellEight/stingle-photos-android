<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/albumNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="12dp"
        android:text="@string/album_name" />

    <EditText
        android:id="@+id/albumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:inputType="textCapWords"
        android:hint="@string/shared_album_name" />

    <TextView
        android:id="@+id/permissionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="12dp"
        android:text="@string/permissions" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allow_add_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_add"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/allow_album_add" />

        <TextView
            android:id="@+id/allow_add_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_add"
            android:layout_below="@+id/allow_add_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/allow_album_add_desc" />

        <Switch
            android:id="@+id/allow_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:checked="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allow_share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_share"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/allow_share" />

        <TextView
            android:id="@+id/allow_share_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_share"
            android:layout_below="@+id/allow_share_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/allow_share_desc" />

        <Switch
            android:id="@+id/allow_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:checked="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allow_copy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_copy"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/allow_copy" />

        <TextView
            android:id="@+id/allow_copy_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/allow_copy"
            android:layout_below="@+id/allow_copy_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/allow_copy_desc" />

        <Switch
            android:id="@+id/allow_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:checked="true" />
    </RelativeLayout>


</LinearLayout>
