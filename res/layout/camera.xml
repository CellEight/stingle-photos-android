<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/parentLayout"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/camera_preview_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:gravity="left" />

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
	    android:gravity="center" >
		<TextView
	        android:id="@+id/photoSizeLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:textColor="@android:color/white"
	        android:background="#00000000"
	        android:textSize="15dp" />
		
		<ImageButton
	        android:id="@+id/switchCamButton"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:scaleType="centerInside"
	        android:layout_gravity="left"
	        android:contentDescription="@string/camera"
	        android:background="@null"
	        android:src="@drawable/ic_action_switch_camera"
	        android:visibility="gone" />
		
		<ImageButton
	        android:id="@+id/optionsButton"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:scaleType="centerInside"
	        android:layout_gravity="left"
	        android:contentDescription="@string/options"
	        android:background="@null"
	        android:src="@drawable/ic_action_options" />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/timerLabelContainer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
	    android:background="#000"
	    android:gravity="center"
		android:visibility="gone" >
		<TextView
	        android:id="@+id/timerLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="30dp" />
	</LinearLayout>
	
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|bottom" >

		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_alignParentBottom="true"
	    	android:id="@+id/adHolder" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

       	<LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:gravity="center" >
            <ImageButton
                android:id="@+id/flashButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_gravity="left"
                android:contentDescription="@string/flash"
                android:background="@null"
                android:src="@drawable/flash_off" />
           
            <ImageButton
                android:id="@+id/timerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:contentDescription="@string/timer"
                android:background="@null"
                android:src="@drawable/timer_disabled" />
        </LinearLayout>
		<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/take_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_gravity="center"
                android:src="@drawable/shutter_button" />
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/lastPhotoContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            android:background="#000">
            <ImageView
                android:id="@+id/lastPhoto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery" />
		</LinearLayout>
    </RelativeLayout>

</FrameLayout>