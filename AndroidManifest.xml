<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fenritz.safecam"
    android:versionCode="16"
    android:versionName="2.5.4" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus"  android:required="false"/>
    <uses-feature android:name="android.hardware.screen.landscape" android:required="false"/> 

    <application
        android:name=".SafeCameraApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock"
        android:largeHeap="true"
        android:allowBackup="true" >
        <activity
            android:name=".SafeCameraActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Camera"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_gallery"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewImageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_view_photo" >
        </activity>
        <activity
            android:name=".SetUpActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_setup" >
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_dashboard" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_settings" >
        </activity>
        <activity
            android:name=".FileDialog"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_choose_file" >
        </activity>
        <activity
            android:name=".ChangePasswordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_change_password" >
        </activity>
        <activity
            android:name=".ImportPhotosActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_import" >
        </activity>
    </application>

</manifest>